                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Style="{StaticResource TextBlock_Left}" FontWeight="SemiBold" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}}" Text="{Binding TitleBold, StringFormat=N3, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" />
                <TextBlock Grid.Row="1" Style="{StaticResource TextBlock_Left}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}}" Text="{Binding TitleNoBold, StringFormat=N3, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}"/>
