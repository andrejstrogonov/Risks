                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox BorderThickness="0 0 1 0" BorderBrush="Gray" Style="{StaticResource TextBox_Cell_Left}" Text="{Binding Number, StringFormat=N3, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                <TextBox Style="{StaticResource TextBox_Cell_Left}" Text="{Binding UnitSymbol, Mode=OneWay}"/>

            </Grid>
            <Border.ToolTip>
                <ToolTip Content="{Binding DataContext, RelativeSource={RelativeSource Self}, StringFormat=N3, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" Placement="MousePoint" x:Name="toolTip" Width="Auto" FontSize="15" FontFamily="Calibri" VerticalAlignment="Center">

                </ToolTip>
            </Border.ToolTip>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="DataGridCell_NameWithCheckBox">
