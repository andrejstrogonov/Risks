                <TextBox x:Name="tb" Style="{StaticResource TextBox_Cell_Right}"  MaxWidth="{x:Static local:WindowConstants.MaxColumnWidth_Commentary}" Text="{Binding Content, Converter={StaticResource StrToNum},StringFormat=N3, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}}" />
            </Grid>
            <Border.ToolTip>
                <ToolTip Content="{Binding DataContext, RelativeSource={RelativeSource Self}, StringFormat=N3, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" Placement="MousePoint" x:Name="toolTip" Width="Auto" FontSize="15" FontFamily="Calibri" VerticalAlignment="Center">

