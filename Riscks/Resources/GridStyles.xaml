<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Riscks.Resources"
                    xmlns:Themes1="http://schemas.microsoft.com/wpf/2008/toolkit" 
                    xmlns:convs ="clr-namespace:Riscks.Converters"
                    xmlns:gl="clr-namespace:System.Globalization;assembly=mscorlib">


    <convs:StringToNumberConverter x:Key="StrToNum"/>
    <Style x:Key="TextBlock_Center" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Calibri"/>
        <Setter Property="SnapsToDevicePixels" Value="true"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="7 0"/>
    </Style>

    <Style x:Key="TextBlock_Right" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_Center}">
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <Style x:Key="TextBlock_Left" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_Center}">
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="TextBox_Cell_Center" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="Calibri"/>
        <Setter Property="Foreground" Value="#171717"/>
        <Setter Property="SnapsToDevicePixels" Value="true"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="7 0"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="TextBox_Cell_Right" TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBox_Cell_Center}" >
        <Setter Property="TextAlignment" Value="Right"/>
    </Style>
    
    <Style x:Key="TextBox_Cell_Left" TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBox_Cell_Center}">
        <Setter Property="TextAlignment" Value="Left"/>
    </Style>


    <ControlTemplate x:Key="MultiLevelHeader_1" TargetType="{x:Type DataGridColumnHeader}">
         <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="95*"></ColumnDefinition>
                <ColumnDefinition Width="70*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"></RowDefinition>
                <RowDefinition Height="29"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" BorderThickness="0.5 0 0.5 0" BorderBrush="#DEDEDE" >
                <Grid Width="Auto" Background="Transparent"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
                    <TextBlock Foreground="#2C2C2C" Style="{StaticResource TextBlock_Left}"  Text="НАИМЕНОВАНИЕ"/>
                </Grid>
            </Border>
            <Border Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" BorderThickness="0.5 1 1 1" BorderBrush="#DEDEDE" >
                <Grid Width="Auto" Background="Transparent"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
                    <TextBlock Foreground="#2C2C2C"  Style="{StaticResource TextBlock_Left}"  Text="ПОЛНОЕ"/>
                </Grid>
            </Border>
            <Border Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" BorderThickness="0 1 0.5 1" BorderBrush="#DEDEDE" >
                <Grid Width="Auto" Background="Transparent"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
                    <TextBlock Foreground="#2C2C2C"  Style="{StaticResource TextBlock_Center}"  Text="КРАТКОЕ"/>
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="MultiLevelHeader_2" TargetType="{x:Type DataGridColumnHeader}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="50" Width="50*"></ColumnDefinition>
                <ColumnDefinition Width="110*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"></RowDefinition>
                <RowDefinition Height="29"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" BorderThickness="0.5 0 0.5 0" BorderBrush="#DEDEDE" >
                <Grid Width="Auto" Background="Transparent"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
                    <TextBlock Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource TextBlock_Center}"  Text="ПРОПОРЦИЯ"/>
                </Grid>
            </Border>
            <Border Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" BorderThickness="0.5 1 1 0" BorderBrush="#DEDEDE" >
                <Grid Width="Auto" Background="Transparent"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
                    <TextBlock Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource TextBlock_Left}"  Text="БАЗИС"/>
                </Grid>
            </Border>
            <Border Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" BorderThickness="0 1 0.5 0" BorderBrush="#DEDEDE" >
                <Grid Width="Auto" Background="Transparent"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
                    <TextBlock Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource TextBlock_Center}"  Text="СООТНОШЕНИЕ"/>
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>
    
    <ControlTemplate x:Key="GridHeaderTemplate_Common" TargetType="{x:Type DataGridColumnHeader}">
        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0.5 0 0.5 0" BorderBrush="#DEDEDE">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource TextBlock_Right}" Text="{TemplateBinding Content}"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="GridHeaderTemplate_Common_Multiline"  TargetType="{x:Type DataGridColumnHeader}">
        <Border VerticalAlignment="Stretch" BorderThickness="0.5 0 0.5 0" BorderBrush="#DEDEDE">
            <Grid Width="Auto"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource TextBlock_Right}" FontFamily="Calibri Light"  LineHeight="15" Text="{TemplateBinding Content}"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="GridHeaderTemplate_Center_Multiline"  TargetType="{x:Type DataGridColumnHeader}">
        <Border VerticalAlignment="Stretch" BorderThickness="0.5 0 0.5 0" BorderBrush="#DEDEDE">
            <Grid Width="Auto"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource TextBlock_Center}" FontFamily="Calibri Light" LineHeight="15" Text="{TemplateBinding Content}"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="GridHeaderTemplate_Left_Multiline"  TargetType="{x:Type DataGridColumnHeader}">
        <Border VerticalAlignment="Stretch" BorderThickness="0 0 0.5 0" BorderBrush="#DEDEDE">
            <Grid Width="Auto"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource TextBlock_Left}" FontFamily="Calibri Light" LineHeight="15" Text="{TemplateBinding Content}"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="GridHeaderTemplate_First" TargetType="{x:Type DataGridColumnHeader}">
        <Border HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" BorderThickness="0 0 0.5 0" BorderBrush="#DEDEDE" >
            <Grid Width="Auto" Background="Transparent"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
                <TextBlock Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource TextBlock_Left}"  Text="{TemplateBinding Content}"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="GridHeaderTemplate_Center" TargetType="{x:Type DataGridColumnHeader}">
        <Border VerticalAlignment="Stretch" BorderThickness="0.5 0 0.5 0"  BorderBrush="#DEDEDE">
            <Grid Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource TextBlock_Center}" Text="{TemplateBinding Content}"/>
            </Grid>
        </Border>
    </ControlTemplate>
    <ControlTemplate x:Key="GridHeaderTemplate_Center_WithoutBorders" TargetType="{x:Type DataGridColumnHeader}">
        <Border VerticalAlignment="Stretch">
            <Grid Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock TextAlignment="Center" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource TextBlock_Center}" Text="{TemplateBinding Content}"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="GridHeaderTemplate_Last" TargetType="{x:Type DataGridColumnHeader}">
        <Border  BorderThickness="0.5 0 0 0" BorderBrush="#DEDEDE" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}" Style="{StaticResource TextBlock_Right}" Text="{TemplateBinding Content}"/>
            </Grid>
        </Border>
    </ControlTemplate>

    <DataTemplate x:Key="DataGridCell_Rigth_Infinity">
        <Border FocusManager.FocusedElement="{Binding ElementName=tb}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="tb" Grid.Column="0" Style="{StaticResource TextBox_Cell_Right}" Text="{Binding Content.Maximum, Converter={StaticResource StrToNum},StringFormat=N3, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, UpdateSourceTrigger=LostFocus}"/>
                <Button Grid.Column="1" HorizontalAlignment="Right" Command="{Binding Content.SetInfinityCommand, RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Mode=TwoWay}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="#cecece"  BorderBrush="#bebebe" BorderThickness="1">
                                <TextBlock FontFamily="Calibri" FontSize="15" Text="&#x221E;" Margin="5 3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#bebebe"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#b0b0b0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Border.ToolTip>
                <ToolTip Content="{Binding DataContext.Maximum, RelativeSource={RelativeSource Self}, StringFormat=N3, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" Placement="MousePoint" x:Name="toolTip" Width="Auto" FontSize="15" FontFamily="Calibri" VerticalAlignment="Center">

                </ToolTip>
            </Border.ToolTip>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="DataGridCell_Left">

        <Border FocusManager.FocusedElement="{Binding ElementName=tb}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent" >
            <Grid >
                <TextBox TextAlignment="Left" CaretIndex="0" Width="Auto"  x:Name="tb" Style="{StaticResource TextBox_Cell_Left}" Text="{Binding Content, Converter={StaticResource StrToNum},StringFormat=N3, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, UpdateSourceTrigger=LostFocus}">
                    
                </TextBox>
            </Grid>
            <Border.ToolTip>
                <ToolTip Content="{Binding DataContext, RelativeSource={RelativeSource Self}, StringFormat=N3, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" Placement="MousePoint" x:Name="toolTip" Width="Auto" FontSize="15" FontFamily="Calibri" VerticalAlignment="Center">
                    
                </ToolTip>
            </Border.ToolTip>
        </Border>
        <DataTemplate.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
            <Setter TargetName="toolTip" Property="Visibility" Value="Visible"/>
        </Trigger>
        </DataTemplate.Triggers>
    </DataTemplate>

    <DataTemplate x:Key="DataGridCell_NumberWithUnit">
        <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent" >
