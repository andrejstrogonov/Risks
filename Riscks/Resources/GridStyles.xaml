            <Grid>
                <CheckBox x:Name="cb" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding IsUsing, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
            </Grid>
        </Border>
    </DataTemplate>

